{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES2015",
		"module": "CommonJS",

        "skipLibCheck": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "out",
        "resolveJsonModule": true,
        "removeComments": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ]
}